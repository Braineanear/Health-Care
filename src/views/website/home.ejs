<%- include ('layout/header') -%>
<!-- hero-area start -->
<section class="hero-area">
    <div class="slider-active">
        <div class="single-slider slider-height" data-background="img/slider/slider1.jpg"></div>
        <div class="single-slider slider-height" data-background="img/slider/slider2.jpg"></div>
        <div class="single-slider slider-height" data-background="img/slider/slider3.jpg"></div>
        <div class="single-slider slider-height" data-background="img/slider/slider4.jpg"></div>
    </div>
</section>
<!-- hero-area end -->

<!-- companies section start -->
<section class="companies-area" id="Company">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1">
                <div class="section-title text-center pos-rel mb-75">
                    <div class="section-text pos-rel">
                        <h1>Our Companies</h1>
                    </div>
                    <div class="section-line pos-rel">
                        <img src="img/section-title-line.png" alt="Line">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="compaines">
                <%companyData.forEach(function(company) {%>
                <div class="company">
                    <img src="<%=company.image%>" alt="<%=company.name%>" />
                    <div class="company-info">
                        <h1><%=company.name%></h1>
                        <p><%=company.description%></p>
                        <a href="<%=company.link%>">Visit Us</a>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
    </div>
</section>
<!-- companies section end -->

<!-- about-area start -->
<section class="about-area pt-120 pb-90" id="About">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-5">
                <div class="about-logo">
                    <img src="img/logo.png" alt="Logo">
                </div>
                <div class="about-left-side pos-rel mb-30">
                    <div class="about-front-img">
                        <img src="img/about-img.jpg" alt="About">
                    </div>
                    <div class="about-shape">
                        <img src="img/about-shape.png" alt="Shape">
                    </div>
                </div>
            </div>
            <div class="about-right-side col-xl-6 col-lg-7">
                <div class="pt-55 mb-30">
                    <div class="about-title mb-20">
                        <h1>About Us</h1>
                    </div>
                    <div class="about-text">
                        <p>Global Values Group (G.V.G) was founded as a result of merging of many groups of  companies in different fields.</p>
                        <p>Three companies( wisemed inc ,meramed labs and maven experts usa Inc)are covering the animal health products and personal care products.
                        <p>Zox Inc. For automotive oils and Tri-V for house cleaners.</p>
                        <p>We are keeping the same hight quality and keeping the same trading names in some countries.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about-area end -->

<!-- services-area start -->
<section class="servcies-area gray-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-6 col-md-6">
