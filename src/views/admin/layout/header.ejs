<!DOCTYPE html>
<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="Content-Security-Policy"
  content="worker-src 'self' blob:;">

  <title>GVG - <%= title %></title>

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="shortcut icon" type="image/x-icon" href="../img/logo.png">

  <!-- vendor css -->
  <link href="../vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
  <link href="../vendor/icofont/icofont.min.css" rel="stylesheet">
  <link href="../vendor/noty/noty.css" rel="stylesheet">

  <!-- Main CSS -->
  <link rel="stylesheet" href="../css/dashboard-style.css">
</head>

<body class="collapsed-menu">
  <!-- ########## START: LEFT PANEL ########## -->
  <div class="br-logo"><a href="/">GVG</a></div>
  <div class="br-sideleft overflow-y-auto">
    <label class="sidebar-label pd-x-15 mg-t-20">Navigation</label>
    <div class="br-sideleft-menu">
      <!-- Dashboard -->
      <a href="/dashboard" class="br-menu-link <%- title == 'Dashboard'? 'active' : ''%>">
        <div class="br-menu-item">
          <i class="icofont-home tx-22 wd-30"></i>
          <span class="menu-item-label">Dashboard</span>
        </div>
      </a>

      <a href="/dashboard/company" class="br-menu-link <%- title == 'Company'? 'active' : ''%>">
        <div class="br-menu-item">
          <i class="icofont-building-alt tx-24 wd-30"></i>
          <span class="menu-item-label">Company</span>
        </div>
      </a>

      <a href="/dashboard/product" class="br-menu-link <%- title == 'Products'? 'active' : ''%>">
        <div class="br-menu-item">
          <i class="icofont-box tx-24 wd-30"></i>
          <span class="menu-item-label">Products</span>
        </div>
      </a>
    </div>
  </div>
  <!-- ########## END: LEFT PANEL ########## -->

  <!-- ########## START: HEADER PANEL ########## -->
  <div class="br-header">
    <div class="br-header-left">
      <div class="navicon-left hidden-md-down"><a id="btnLeftMenu" href="#"><i class="icofont-navigation-menu"></i></a>
      </div>
      <div class="navicon-left hidden-lg-up"><a id="btnLeftMenuMobile" href="#"><i
            class="icofont-navigation-menu"></i></a></div>
    </div>

    <div class="br-header-right">
      <nav class="nav">
        <div class="dropdown">
          <a href="" class="nav-link nav-link-profile" data-toggle="dropdown">
            <span class="logged-name hidden-md-down"><%= user.name %></span>
            <%if(user.avatarURL){%>
            <img src="<%=user.avatarURL%>" class="wd-32 rounded-circle" alt="<%=user.name%>">
            <%} else {%>
            <img src="http://via.placeholder.com/64x64" class="wd-32 rounded-circle" alt="<%=user.name%>">
            <%}%>
          </a>

          <div class="dropdown-menu dropdown-menu-header wd-200">
            <ul class="list-unstyled user-profile-nav">
              <li><a href="#" id="logout"><i class="icon ion-power"></i> Sign Out</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <!-- ########## END: HEADER PANEL ########## -->
