<%- include ('layout/header') -%>

<!-- ########## START: MAIN PANEL ########## -->
<div class="br-mainpanel">
  <!-- ########## START: CONTENT ########## -->
  <div class="col-12">
    <div class="pd-30">
      <h4 class="tx-gray-800 mg-b-5">Company</h4>
      <p class="mg-b-0">You can edit the company area from here</p>
    </div>

    <div class="br-pagebody mg-t-5 pd-x-30">
      <div class="row row-sm mg-t-20">
        <div class="col-12">
          <form class="form-layout form-layout-1" name="companyLinkForm">
            <div class="col-lg-12">
              <h4 class="tx-gray-800 mg-b-5">Company Link</h4> <br>
              <div class="form-group">
                <label class="form-control-label">Company Name: <span class="tx-danger companyLinkNameError">*</span></label>
                <input class="form-control" type="text" name="companyLinkName" placeholder="Enter the company name">
              </div>

              <div class="form-group">
                <label class="form-control-label">Company Link: <span class="tx-danger companyLinkLinkError">*</span></label>
                <input class="form-control" type="text" name="companyLinkLink" placeholder="Enter the company link">
              </div>

              <div class="form-group">
                <label class="form-control-label">Company Description: <span class="tx-danger companyLinkDescriptionError">*</span></label>
                <textarea class="form-control" type="text" name="companyLinkDescription" placeholder="Enter the company description"></textarea>
              </div>
            </div>

            <div class="col-lg-5 col-md-12 mg-b-25">
              <label class="form-control-label">Image: <span class="tx-danger companyLinkImageError">*</span></label>
              <div class="upload">
                <div class="uploadInfo">
                  <span class="uploadFileName"><input type="file" name="companyLinkImage"></span>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-lg-12">
              <button class="btn btn-info submintCompanyLink">Submit</button>
              <button class="btn btn-secondary clearCompanyLink">Clear Form</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="br-pagebody mg-t-5 pd-x-30">
      <div class="row row-sm mg-t-20">
        <div class="col-12">
          <form class="form-layout form-layout-1" name="companyPageForm">
            <div class="col-lg-12">
              <h4 class="tx-gray-800 mg-b-5">Company Page</h4> <br>
              <div class="form-group">
                <label class="form-control-label">Company Name: <span class="tx-danger companyPageNameError">*</span></label>
                <input class="form-control" type="text" name="companyPageName" placeholder="Enter the company name">
              </div>

              <div class="form-group">
                <label class="form-control-label">Company Description: <span class="tx-danger companyPageDescriptionError">*</span></label>
                <textarea class="form-control" type="text" name="companyPageDescription" placeholder="Enter the company description"></textarea>
              </div>
            </div>

            <div class="col-lg-5 col-md-12 mg-b-25">
              <label class="form-control-label">Image: <span class="tx-danger companyPageImageError">*</span></label>
              <div class="upload">
                <div class="uploadInfo">
                  <span class="uploadFileName"><input type="file" name="companyPageImage"></span>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-lg-12">
              <button class="btn btn-info submitCompanyPage">Submit</button>
              <button class="btn btn-secondary clearCompanyPage">Clear Form</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-12 companyArea">
    </div>
  </div>
  <!-- ########## END: CLIENTS CONTENT ########## -->

  <%- include ('layout/footer') -%>
